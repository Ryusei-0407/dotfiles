{
    "coc.preferences.formatOnSaveFiletypes": [
        "json",
        "yaml",
        "cpp",
        "javescript",
        "typescript",
        "python",
        "go",
        "rust",
        "tf"
    ],
    "languageserver": {
        "rust": {
            "command": "rust-analyzer",
            "filetypes": [
                "rust"
            ],
            "rootPatterns": [
                "Cargo.toml"
            ]
        },
        "graphql": {
            "command": "graphql-lsp",
            "args": [
                "server",
                "-m",
                "stream"
            ],
            "filetypes": [
                "typescript",
                "typescriptreact",
                "graphql"
            ]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": [
                "dockerfile"
            ],
            "args": [
                "--stdio"
            ]
        },
        "terraform": {
            "command": "terraform-ls",
            "args": [
                "serve"
            ],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {}
        }
    }
}
